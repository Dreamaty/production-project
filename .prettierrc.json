{
  "singleQuote": true,
  "semi": true,
  "proseWrap": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "printWidth": 65,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "tabWidth": 2,
  "trailingComma": "all",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/shared/(.*)$",
    "^@/(app|entities|features|pages|widgets)/(.*)$",
    "^[../]",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
